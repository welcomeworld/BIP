<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/color_white"/>
                </shape>
            </item>
            <item>
                <inset android:drawable="@drawable/ic_home_focused" android:insetLeft="8dp" android:insetTop="8dp" android:insetRight="8dp" android:insetBottom="8dp" />
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/color_white_60"/>
                </shape>
            </item>
            <item>
                <inset android:drawable="@drawable/ic_home" android:insetLeft="8dp" android:insetTop="8dp" android:insetRight="8dp" android:insetBottom="8dp" />
            </item>
        </layer-list>
    </item>
    <item>
        <inset android:drawable="@drawable/ic_home" android:insetLeft="8dp" android:insetTop="8dp" android:insetRight="8dp" android:insetBottom="8dp" />

    </item>
</selector>