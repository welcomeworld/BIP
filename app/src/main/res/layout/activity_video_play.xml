<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <SurfaceView
        android:id="@+id/video_play_surface_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/video_play_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_2A364C"
        android:textSize="16sp"
        tools:text="video title"
        app:layout_constraintTop_toBottomOf="@id/video_play_surface_view"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/video_play_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/color_575F75"
        tools:text="video desc"
        app:layout_constraintTop_toBottomOf="@id/video_play_title"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_play_item_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_play_des"/>
</androidx.constraintlayout.widget.ConstraintLayout>