<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/bilifont</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/color_white</item>
        <item name="android:windowBackground">@color/color_E4EAF8</item>
    </style>

    <style name="videoSeekTheme">
        <item name="android:progressDrawable">@drawable/progress_video_seek</item>
    </style>

    <style name="splashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="normalDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
<!--        <item name="colorPrimary">@color/color_FAFAFA</item>-->
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Dialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Dialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.Dialog.Button</item>
        <item name="colorOnSurfaceVariant">@color/color_black_60</item>
<!--        <item name="materialButtonStyle">@style/Theme.MyButton</item>-->

    </style>

    <style name="Theme.Dialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>